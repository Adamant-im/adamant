{
  "env": {
    "commonjs": true,
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": "error",
    "no-eq-null": "off",
    "indent": ["off", 4],
    "eqeqeq": "off",
    "curly": "error",
    "no-undef": "error",
    "quotes": ["error", "single"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "always",
      "asyncArrow": "ignore"
    }],
    "callback-return": "off",
    "global-require": "off",
    "handle-callback-err": "off",
    "no-mixed-requires": "off",
    "no-new-require": "off"
  },
  "globals": {
    "it": true,
    "describe": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true
  },
  "plugins": []
}
